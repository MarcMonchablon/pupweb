_mainBgColor = #141414
_mainColor = #753D27

_fontColor = #B6A49C


body
  background-image url('../ressources/materials/footer_lodyas.png')
  color _fontColor
  font-family korpo_sansregular

_desktopHeaderHeight = 30em  
header
  margin-top 1em
  @media (min-width: 768px)
    height _desktopHeaderHeight
  background-image url('../ressources/materials/congruent_pentagon.png')
  img
    @media (min-width: 768px)
      height _desktopHeaderHeight
    @media (max-width: 768px)
      width 100%
  .greetings
    padding-left 2em
    padding-right 2em
    p
      font-size 1.7em
      color black
      font-family 'Permanent Marker', cursive
      &.hi
        font-size 2em
        margin-left 0.7em
   .personnalInfos
     padding-left 1.3em
     color black
     font-size 100%
     h3
       font-weight bold
       font-size 2em
     a
       color black
     i
       font-size 3em
       margin-right 0.2em

  
.mainContainer
  margin auto
  background-color _mainBgColor

section
  border-top 7px solid _mainColor
  h2
    width 10em
    margin-top 0
    padding 0.3em
    background _mainColor

span.fa-stack
  font-size 0.5em
  

_skillsHeight = 15em
_skillsBgOpacity = 0.3
_skillsBorderOpacity = 0.4

_computerLanguageColor = #C82238
_computerVisionColor = #FFFC19
_softwareColor = #0925B2
_languagesColor = #79FF0D




.skills
  height _skillsHeight
  padding 20px
  margin-bottom 30px
  &.computerLanguage
    background-color rgba(_computerLanguageColor, _skillsBgOpacity)
    border 3px solid rgba(_computerLanguageColor, _skillsBorderOpacity)
  &.computerVision
    background-color rgba(_computerVisionColor, _skillsBgOpacity)
    border 3px solid rgba(_computerVisionColor, _skillsBorderOpacity)
  &.software
    background-color rgba(_softwareColor, _skillsBgOpacity)
    border 3px solid rgba(_softwareColor, _skillsBorderOpacity)
  &.languages
    background-color rgba(_languagesColor, _skillsBgOpacity)
    border 3px solid rgba(_languagesColor, _skillsBorderOpacity)            

    
    